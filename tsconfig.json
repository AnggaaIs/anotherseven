{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["ES2022"],
    "outDir": "./dist",
    "baseUrl": ".",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true
  }
}
